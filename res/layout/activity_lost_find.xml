<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

     <TextView 
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="手机防盗"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:background="#8866ff00"
        />
     
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
         
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="安全号码"
             android:textColor="#000000"
             android:textSize="20sp"
             android:layout_marginLeft="5dp"
             android:layout_marginTop="8dp"
             />
         
         <TextView 
             android:id="@+id/tv_safenumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="5dp"
             android:layout_marginTop="8dp"
             android:layout_alignParentTop="true"
             android:layout_alignParentRight="true"
             android:text="XXXX"
             android:textColor="#000000"
             android:textSize="20sp"
             />    
     </RelativeLayout>
     
     <View 
         android:layout_width="match_parent"
         android:layout_height="0.2dp"
         android:background="#808080"
         android:layout_marginTop="8dp"
         />
     
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         >
         
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="防盗保护是否开启"
             android:textColor="#000000"
             android:textSize="20sp"
             android:layout_marginLeft="5dp"
             android:layout_marginTop="8dp"
             />
         
         <ImageView 
             android:id="@+id/iv_protecting"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_marginRight="5dp"
           	 android:layout_alignParentTop="true"
             android:layout_alignParentRight="true"
             android:src="@drawable/unlock"
             />   
     </RelativeLayout>
     
     <View 
         android:layout_width="match_parent"
         android:layout_height="0.2dp"
         android:background="#808080"
         android:layout_marginTop="8dp"
         />
     
     <TextView
         android:background="@drawable/shape_button"
        android:clickable="true" 
        android:onClick="reEnterSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重进进入设置向导"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
             />
     
      <View 
         android:layout_width="match_parent"
         android:layout_height="0.2dp"
         android:background="#808080"
         android:layout_marginTop="8dp"
         />
      
      <TextView 
          android:background="#44000000"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="功能简介"
             android:textColor="#000000"
             android:textSize="22sp"
             android:layout_marginLeft="5dp"
             android:layout_marginTop="3dp"
             />
      
     <TextView
        android:text="GPS追踪: #*location*#"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
    
    <TextView 
        android:text="播放报警音乐: #*alarm*#"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
    
    <TextView 
        android:text="远程删除数据: #*wipedata*#"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
    
    <TextView 
        android:text="远程锁屏: #*lockscreen*#"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
     
</LinearLayout>
