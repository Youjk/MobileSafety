<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp" >
    
    
    <ImageView 
        android:id="@+id/iv_task_icon"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"
        />
    
    <TextView 
        android:id="@+id/tv_task_name"
        android:layout_toRightOf="@+id/iv_task_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进程名称"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="3dp"
        />
    
     <TextView 
        android:id="@+id/tv_task_mem"
        android:layout_toRightOf="@+id/iv_task_icon"
        android:layout_below="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="占用内存"
        android:textSize="16sp"
        android:textColor="#88000000"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        />
     
      <TextView
        android:id="@+id/tv_task_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统进程"
        android:textSize="16sp"
        android:textColor="#88000000"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        />
      
      <CheckBox 
          android:clickable="false"
          android:focusable="false"
          android:id="@+id/cb_task"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="3dp"
          android:layout_above="@+id/tv_task_type"
          />

</RelativeLayout>
