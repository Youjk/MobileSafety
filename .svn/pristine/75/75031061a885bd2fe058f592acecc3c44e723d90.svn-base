<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yjk="http://schemas.android.com/apk/res/com.yjk.mobilesafety"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <TextView 
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="设置中心"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:background="#8866ff00"
        />
 
 <com.yjk.mobilesafety.ui.SettingItemView 
     yjk:tv_title="设置自动更新"
     yjk:desc_on="自动更新已开启"
     yjk:desc_off="自动更新已关闭"
     android:id="@+id/siv_update"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     />
 

 <com.yjk.mobilesafety.ui.SettingItemView 
     yjk:tv_title="设置来电归属地显示"
     yjk:desc_on="来电归属地显示已开启"
     yjk:desc_off="来电归属地显示已关闭"
     android:id="@+id/siv_show_address"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     />
 
   <com.yjk.mobilesafety.ui.SettingClickView 
     android:id="@+id/scv_changebg"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     />

</LinearLayout>
